APP_VERSION=1.0.0
APP_NAME=KoentjoroProfile
APP_STAGE=development
BASE_URL=http://localhost:8000

# MongoDB Connection
CONNECTION_STRING=mongodb://username:password@localhost:27017
MONGODB_NAME=koentjoro_db

# MongoDB Connection Pool Settings (Optional - defaults shown)
# MONGODB_MAX_POOL_SIZE=50              # Maximum number of connections in the pool
# MONGODB_MIN_POOL_SIZE=10              # Minimum number of connections to maintain
# MONGODB_MAX_IDLE_TIME_MS=300000       # 5 minutes - max time a connection can remain idle
# MONGODB_CONNECT_TIMEOUT_MS=20000      # 20 seconds - timeout for initial connection
# MONGODB_SERVER_SELECTION_TIMEOUT_MS=30000  # 30 seconds - timeout for selecting a server
# MONGODB_SOCKET_TIMEOUT_MS=20000       # 20 seconds - timeout for socket operations
# MONGODB_MAX_CONNECTING=2              # Maximum number of incoming connection at the same time
