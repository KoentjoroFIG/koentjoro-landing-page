APP_VERSION=1.0.0                     # Application version
APP_NAME=KoentjoroProfile             # Application name
APP_STAGE=development                 # Application stage: development, production
BASE_URL=http://localhost:8000        # Base URL for the application

# MongoDB Connection
CONNECTION_STRING=mongodb://username:password@localhost:27017   # MongoDB connection string
MONGODB_NAME=koentjoro_db             # MongoDB database name
MONGODB_MAX_POOL_SIZE=100             # Maximum number of connections in the pool (default in code: 100)
MONGODB_MIN_POOL_SIZE=10              # Minimum number of connections to maintain
MONGODB_MAX_IDLE_TIME_MS=300000       # 5 minutes - max time a connection can remain idle
MONGODB_MAX_CONNECTING=2              # Maximum number of incoming connection at the same time

# JWT Settings
JWT_SECRET=changeme_replace_with_strong_secret  # JWT secret key
JWT_ALGORITHM=HS256                             # JWT algorithm
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15             # Access token expiration time in minutes (15 minutes)
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080         # Refresh token expiration time in minutes (7 days)
